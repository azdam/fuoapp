<!DOCTYPE html>
<html>
<head>
  <title>FUO Student Manager</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar  navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">FUO Student Manager</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <% if session[:user_id] %>
          <ul class="nav navbar-nav">
            <li><%= link_to "Students", students_path %></li>
            <li><%= link_to "Hostels", hostels_path %></li>
            <li><%= link_to "Students Accomodation", accomodations_path %>
            </li>
            <li><%= link_to "Administrators", administrators_path %></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> 
                <span><i class="fa fa-user"> <%= @current_admin.email %> </i></span>
                <span class="caret"></span>
              </a>      
              <ul class="dropdown-menu" role="menu">

                <li class="divider"></li>
                <li>
                  <%= link_to signout_path, method: :delete do %>
                    <i class="fa fa-sign-out"></i>
                    <span>Sign out</span>
                  <% end %>
                </li>
              </ul>
            </li>  
          </ul>

      
        <% end %>
      </div><!-- /.navbar-collapse -->


    </div><!-- /.container-fluid -->
  </nav>

  <div class="container main">
    <section class="row">
       <%= yield %>
    </section>
  </div>
</body>
</html>
 