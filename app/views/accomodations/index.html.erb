<h3>Accomodations</h3>

<%= link_to 'New Accomodation', new_accomodation_path, class: "btn btn-primary create" %>

<table class="table">
  <thead>
    <tr>
      <th>Room nos</th>
      <th>Validity period</th>
      <th>Status</th>
      <th>Hostel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accomodations.each do |accomodation| %>
      <tr>
        <td><a href="<%= accomodation_path(accomodation) %>"><%="RM #{ accomodation.room_nos}" %></a></td>
        <td><%= accomodation.validity_period %></td>
        <td><%= accomodation.has_occupant ? "Occupied": "Vacant" %></td>
        <td><%= accomodation.hostel.name %></td>
        <td><a href="<%= edit_accomodation_path(accomodation) %>" title="update"><i class="fa fa-edit"></i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
