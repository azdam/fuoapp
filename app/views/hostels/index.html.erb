<h1>Hostels</h1>

<%= link_to 'New Hostel', new_hostel_path , class:"btn btn-primary create"%>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Hostel</th>
      <th>Description</th>
      <th>Number of rooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hostels.each do |hostel| %>
      <tr>
        <td><a href="<%= hostel_path(hostel) %>"><%= hostel.name %></a></td>
        <td><%= hostel.description %></td>
        <td><%= hostel.room_count %></td>
        <td><a href="<%= edit_hostel_path(hostel) %>" title="update"><i class="fa fa-edit"></i></a></td>
        <td><%= link_to content_tag(:i, nil,  class: "fa fa-trash", title:"remove student"), hostel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>